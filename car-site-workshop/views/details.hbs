{{!-- {{#with car}} --}}
<h1>{{car.name}}</h1>
<img class='cube' src='{{car.imageUrl}}' />
<div class='details'>
    <p><span>Description:</span>
        {{car.description}}</p>
    <p><span>Price:</span> {{car.price}}</p>
    <a class='btn' href='/'>Back</a>
    {{#if isOwner}}
    <a class='btn' href='/edit/{{car.id}}'>Edit</a>
    <a class='btn' href='/attach/{{car.id}}'>Add Accessory</a>
    <a class='btn' href='/delete/{{car.id}}'>Delete</a>
    {{/if}}
</div>
{{!-- {{/with}} --}}


<h2>Accessories</h2>
<div class='accessories'>
    {{#each car.accessories}}
        {{> accessory}}
    {{else}}
        <h3 class='italic'>This car has no accessories yet...</h3>
    {{/each}}
</div>
