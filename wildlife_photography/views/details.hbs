{{#with post}}
    <div class='details card-details'>
        <h1>{{title}}</h1>
        <h3>Created by {{author.firstName}} {{author.lastName}}</h3>
        <img class='cube' src='{{image}}' />
        <div class='card-animal'>
            <p class='card-keyword'>Keyword: {{keyword}}</p>
            <p class='card-location'>Location: {{location}}</p>
            <p class='card-date'>Date: {{date}}</p>

        </div>
        <p><span>Description:</span>
            {{description}}</p>
        {{#if hasUser}}
            <div class='details-buttons'>
                {{#if isAuthor}}
                    <a class='btn' href='/edit/{{_id}}'>Edit</a>
                    <a class='btn' href='/delete/{{_id}}'>Delete</a>
                {{else}}

                    {{#if hasVotes}}
                        <p>Thanks for voting</p>
                    {{else}}
                        <a class='btn' href='/vote/{{_id}}/upvote'>UpVote +1</a>
                        <a class='btn' href='/vote/{{_id}}/downvote'>DownVote -1</a>
                    {{/if}}
                {{/if}}
            </div>
        {{/if}}
        <a class='btn' href='/catalog'>Back</a>
    </div>

    <div class='vote-info'>
        <div class='card-details'>
            <h3>Votes</h3>
            <div class='card_vote'>
                <p class='PV'>Total rating of votes: {{rating}}</p>
            </div>
            {{#if votes}}
                <p class='disc'>People who voted for the post:
                    {{#each votes}}{{email}} , {{/each}}</p>
            {{else}}
                <p class='disc'>People who voted for the post - No one has voted
                    yet.</p>
            {{/if}}
        </div>
    </div>
{{/with}}