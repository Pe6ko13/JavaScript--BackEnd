<h1>Edit this product</h1>
<a class="back" href="/catalog">Back to catalog</a>
<hr />
<form action="/catalog/{{_id}}" method="post">

  <label><span>Name:</span><input
      type="text"
      name="name"
      value={{name}}
    /></label>
  <label><span>Price:</span><input
      type="number"
      name="price"
      value={{price}}
    /></label>
  <label><span>Promote:</span>
    {{#if promoted}}
      <input type="checkbox" name="promote" checked />
    {{else}}
      <input type="checkbox" name="promote" />
    {{/if}}
  </label>

  <input type="submit" value="Edit" />

</form>
<hr />